<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="240dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cvListMendatar"
        android:layout_width="200dp"
        android:layout_height="240dp"
        android:elevation="2dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgListMendatar"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/txtTimeMendatar"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="155dp"
                android:background="#a0333333"
                android:padding="3dp"
                android:text="11 Januari 2017"
                android:textColor="#fff" />


            <TextView
                android:id="@+id/txtJudulMendatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imgListMendatar"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="2"
                android:padding="1dp"
                android:text="Hamish Daud Menikah dengan Raisa "
                android:textColor="@android:color/black"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

