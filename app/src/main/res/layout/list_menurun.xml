<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/cvListMenurun"
        android:background="@color/colorPrimary"
        android:layout_margin="7.5dp"
        android:layout_height="135dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="150dp"
                android:layout_height="135dp"
                android:id="@+id/imgListMenurun"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/txtJudulMenurun"
                android:layout_marginLeft="5dp"
                android:textColor="#383737"
                android:layout_marginRight="5dp"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/imgListMenurun"
                android:text="Ini Judul yang agak panjang banget"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="5dp"
                android:textColor="#9b9a9a"
                android:layout_toRightOf="@+id/imgListMenurun"
                android:layout_below="@+id/txtJudulMenurun"
                android:text="Minggu 10 Desember"
                android:id="@+id/txtTimeMenurun" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>

