<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="135dp">

  <android.support.v7.widget.CardView
    android:id="@+id/cvListMenurun"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:layout_margin="7.5dp"
    android:background="@color/colorPrimary">


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <ImageView
        android:id="@+id/imgListMenurun"
        android:layout_width="150dp"
        android:layout_height="135dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />


      <TextView
        android:id="@+id/txtJudulMenurun"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imgListMenurun"
        android:gravity="center_vertical"
        android:text="Ini Judul yang agak panjang banget"
        android:textColor="#383737"
        android:textSize="20sp" />

      <TextView
        android:id="@+id/txtTimeMenurun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/txtJudulMenurun"
        android:layout_toRightOf="@+id/imgListMenurun"
        android:text="Minggu 10 Desember"
        android:textColor="#9b9a9a"
        android:textSize="11dp" />

    </RelativeLayout>

  </android.support.v7.widget.CardView>

</RelativeLayout>

