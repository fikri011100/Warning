<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/cardVideo"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <ImageView
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:id="@+id/imgListVideo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        />
      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imgListVideo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textColor="#000"
        android:text="coba"
        android:id="@+id/txtJudulListVideo"
        />
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1:88:88"
        app:layout_constraintRight_toRightOf="@+id/imgListVideo"
        app:layout_constraintBottom_toBottomOf="@+id/imgListVideo"
        android:background="#a0333333"
        android:layout_marginBottom="5dp"
        android:id="@+id/txtDuraiton"
        android:textColor="#fff"
        />
    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>
</RelativeLayout>